<form class="" action="" method="get">
  <p>Buscar preguntas</p>
  <input type="text" name="search" placeholder="Escriba lo que quiere buscar" />
  <input type="submit" value="Buscar"/>
</form>


<p>Filtro por temas</p>
<div class="navegador">
    <div>
      <a href="/quizes/new"><button type="button">Crear una pregunta nueva</button></a>
    </div>
    <div class="filtro">
    <form class="" action="" method="get">
      <input type="hidden" name="search" ></input>
      <input type="submit" class="todo" value="Todo" />
    </form>
    <form class="" action="" method="get">
      <input type="hidden" name="tema" value="humanidades"></input>
      <input type="submit"  value="Humanidades" />
    </form>
    <form class="" action="" method="get">
      <input type="hidden" name="tema" value="ocio"></input>
      <input type="submit"  value="Ocio" />
    </form>
    <form class="" action="" method="get">
      <input type="hidden" name="tema" value="ciencia"></input>
      <input type="submit"  value="Ciencia" />
    </form>
    <form class="" action="" method="get">
      <input type="hidden" name="tema" value="tecnologia"></input>
      <input type="submit"  value="Tecnología" />
    </form>
    <form class="" action="" method="get">
      <input type="hidden" name="tema" value="otro"></input>
      <input type="submit" class="otro" value="Otro" />
    </form>
  </div>
</div>
<div class="contenedor_listado">
  <% if (quizes.length === 0){ %>
    <p>
        No existe ninguna pregunta con la búsqueda realizada,<br>
        por favor introduzca otra búsqueda o vaya a Preguntas<br>
        en el menú de <span id="izquierda">la izquierda</span>
        <span id="arriba">arriba</span> para ver todas la preguntas existentes
    </p>
  <% } %>
  <div >
    <p><% if (quizes.length !== 0 ){
              if (tema  === "preguntas"){ %>
                Todos los temas
          <% }else{ %>
                <% if ((quizes[0].tema) === "tecnologia") { %>
                  Tecnología
                <% } %>
                <% if ((quizes[0].tema) === "ocio") { %>
                  Ocio
                <% } %>
                <% if ((quizes[0].tema) === "ciencia") { %>
                  Ciencia
                <% } %>
                <% if ((quizes[0].tema) === "humanidades") { %>
                  Humanidades
                <% } %>
                <% if ((quizes[0].tema) === "otro") { %>
                  Otro
                <% } %>
          <% } %>
     <% } %>
   </p>
 </div>
 <% if (quizes.length !== 0 ){%>
 <div class="listado">
   <div class="listado1">
     <div class="preguntas">
       <p>Preguntas</p>
     </div>
     <div class="tema">
       <p>Temática</p>
     </div>
   </div>
    <div class="listado1">
     <div class="tema">
       <p>Edita la pregunta</p>
     </div>
     <div class="tema">
       <p>Borra la pregunta</p>
     </div>
   </div>
 </div>
 <% } %>
  <% for (var i=0; i < quizes.length; i++) { %>
  <div class="listado">
    <div class="listado1">
      <div class="preguntas">
        <a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
      </div>
      <div class="tema">
        <p>
          <%= quizes[i].tema %>
        </p>
      </div>
    </div>
    <div class="listado1">
      <div class="tema">
        <a href="quizes/<%= quizes[i].id %>/edit">Editar</a>
      </div>
      <div class="tema">
        <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
          <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
            Borrar
          </button>
        </form>
      </div>
    </div>
  </div>
  <% } %>
</div>
